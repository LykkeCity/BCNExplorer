
@{
    Layout = null;
}
@model TransactionViewModel.BitcoinAsset.In

<div class="address-item ">
    <div class="amount">
        @Model.Value.ToString("0.00######")
    </div>
    <div class="address">
        <a href="@Url.Action("Index", "Transaction", new {id = Model.PreviousTransactionId})"><i class="fa fa-lg fa-arrow-left displ-fa"></i></a>

        @if (Model.IsUnrecoginzedAddress)
        {
            <span>Unrecognized address</span>
        }
        else
        {
            <a href="@Url.Action("Index", "Address", new {id = Model.Address})">@Model.Address</a>
        }
    </div>
</div>

