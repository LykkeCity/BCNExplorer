@model TransactionViewModel
@{
    Layout = null;
}

<ul class="list-group">
    <li class="list-group-item clearfix intput-output-group-list-item container-fluid">
        <div class="assetid hd-bt hidden-xs">
            <h3 class="panel-title ">Bitcoin</h3>
        </div>
        <div class="intput-output-group ">
            <div class="row">
                <div class="col-sm-1">
                    <div class="icon dspl-icon " style=" float:left">
                        <span class="currency-icon thumbnail">
                            <span class="bg-warning">
                                <i class="fa fa-btc"></i>
                            </span>
                        </span>
                    </div>
                    <h3 class="hd-bt hidden-sm hidden-md hidden-lg" style="margin-top: 16px; float:left">Bitcoin</h3>
                    <div class="clearfix"></div>
                </div>
                <div class="col-sm-6">
                    <div class="inputs">
                        @if (Model.Bitcoin.IsCoinBase)
                        {
                            <div class="address-item ">
                                <div class="amount">

                                </div>
                                <div class="address">
                                    <b>Mined coins</b>
                                </div>
                            </div>
                        }
                        else
                        {
                            foreach (var input in Model.Bitcoin.AggregatedIns)
                            {
                                <div class="address-item title-item">
                                    <div class="amount @(input.ShowAggregatedTransactions?"js-toggle-aggregated toggle-aggregated":"")">
                                        @input.TitleItem.Value.ToString("0.00######")
                                        @if (input.ShowAggregatedTransactions)
                                        {
                                            <span class="pull-right"> (@input.Count) ▼</span>
                                        }
                                    </div>
                                    <div class="address">
                                        <a href="@Url.Action("Index", "Transaction", new {id = input.TitleItem.PreviousTransactionId})">
                                            <i class="fa fa-lg fa-arrow-left displ-fa"></i>
                                        </a>

                                        @if (input.TitleItem.IsUnrecoginzedAddress)
                                        {
                                            <span>Unrecognized address</span>
                                        }
                                        else
                                        {
                                            <a href="@Url.Action("Index", "Address", new {id = input.TitleItem.Address})">@input.TitleItem.Address</a>
                                        }
                                    </div>
                                </div>

                                if (input.ShowAggregatedTransactions)
                                {
                                    <div class="aggregated-item-container">
                                        @foreach (var aggregated in input.AggregatedTransactions)
                                        {
                                        <div class="address-item title-item aggregated-item">
                                            <div class="amount">
                                                @aggregated.Value.ToString("0.00######")
                                            </div>
                                            <div class="address">
                                                <a href="@Url.Action("Index", "Transaction", new {id = aggregated.PreviousTransactionId})">
                                                    <i class="fa fa-lg fa-arrow-left displ-fa"></i>
                                                </a>

                                                @if (aggregated.IsUnrecoginzedAddress)
                                                {
                                                    <span>Unrecognized address</span>
                                                }
                                                else
                                                {
                                                    <a href="@Url.Action("Index", "Address", new {id = aggregated.Address})">@aggregated.Address</a>
                                                }
                                            </div>
                                        </div>
                                        }                                   
                                    </div>

                                }
                            }
                        }

                    </div>
                </div>
                <div class="col-sm-5">
                    <div class="outputs">
                        <div class="outputs-container">
                            <div class="center-chevron">
                                <img src="/images/arrow.png" />
                            </div>

                            @foreach (var output in Model.Bitcoin.AggregatedOuts)
                            {
                                <div class="address-item ">
                                    <div class="amount @(output.ShowAggregatedTransactions ? "js-toggle-aggregated toggle-aggregated" : "")">
                                        @output.TitleItem.Value.ToString("0.00######")
                                        @if (output.ShowAggregatedTransactions)
                                        {
                                            <span class="pull-right"> (@output.Count) ▼</span>
                                        }
                                    </div>
                                    <div class="address">
                                        @if (output.TitleItem.IsUnrecoginzedAddress)
                                        {
                                            <span>Unrecognized address</span>
                                        }
                                        else
                                        {
                                            <a href="@Url.Action("Index", "Address", new {id = output.TitleItem.Address})">@output.TitleItem.Address</a>
                                        }
                                    </div>
                                </div>

                                if (output.ShowAggregatedTransactions)
                                {
                                    <div class="aggregated-item-container">
                                        @foreach (var aggregated in output.AggregatedTransactions)
                                        {
                                        <div class="address-item title-item aggregated-item">
                                            <div class="amount">
                                                @aggregated.Value.ToString("0.00######")
                                            </div>
                                            <div class="address">
                                                @if (aggregated.IsUnrecoginzedAddress)
                                                {
                                                    <span>Unrecognized address</span>
                                                }
                                                else
                                                {
                                                    <a href="@Url.Action("Index", "Address", new {id = aggregated.Address})">@aggregated.Address</a>
                                                }
                                            </div>
                                        </div>
                                        }                             
                                    </div>
                                }
                            }
                            <div class="address-item div-fees">
                                <div class="amount">
                                    @Model.Bitcoin.Fees.ToString("0.00######")
                                </div>
                                <div class="address">
                                    <span class="fees-text">Fees</span>
                                </div>
                            </div>
                        </div>
                    </div>                   
                </div>
            </div>
        </div>
    </li>

    @foreach (var coloredAsset in Model.ColoredAssets)
    {
        <li class="list-group-item clearfix intput-output-group-list-item container-fluid">
            <div class="assetid hd-bt hidden-xs">
                <h3 class="panel-title ">@coloredAsset.Name</h3>
            </div>
            <div class="intput-output-group ">
                <div class="row">
                    <div class="col-sm-1">
                        <div class="icon dspl-icon " style=" float:left">
                            <span class="currency-icon thumbnail">
                                @if (coloredAsset.IconImageUrl != null)
                                {
                                    <a href="@Url.Action("Index", "Asset", new {id = coloredAsset.AssetId})">
                                        <img src="@coloredAsset.IconImageUrl" />
                                    </a>
                                }
                                else
                                {
                                    <span class="bg-primary">
                                        <i class="fa fa-money"></i>
                                    </span>
                                }
                            </span>
                        </div>
                        <h3 class="hd-bt hidden-sm hidden-md hidden-lg" style="margin-top: 16px; float:left">@coloredAsset.Name</h3>
                        <div class="clearfix"></div>
                    </div>
                    <div class="col-sm-6">
                        <div class="inputs">
							@foreach (var input in coloredAsset.AggregatedIns)
                            {
                                <div class="address-item ">
                                    <div class="amount @(input.ShowAggregatedTransactions ? "js-toggle-aggregated toggle-aggregated" : "")">
                                        @input.TitleItem.Value.ToString("N0") @input.TitleItem.ShortName
                                        @if (input.ShowAggregatedTransactions)
                                        {
                                            <span class="pull-right"> (@input.Count) ▼</span>
                                        }
                                    </div>
                                    <div class="address">
                                        <a href="@Url.Action("Index", "Transaction", new {id = input.TitleItem.PreviousTransactionId})">
                                            <i class="fa fa-lg fa-arrow-left displ-fa"></i>
                                        </a>

                                        @if (input.TitleItem.IsUnrecoginzedAddress)
                                        {
                                            <span>Unrecognized address</span>
                                        }
                                        else
                                        {
                                            <a href="@Url.Action("Index", "Address", new {id = input.TitleItem.Address})">@input.TitleItem.Address</a>
                                        }
                                    </div>
                                </div>

                                if (input.ShowAggregatedTransactions)
                                {
                                    <div class="aggregated-item-container">
                                        @foreach (var aggregated in input.AggregatedTransactions)
                                        {
                                        <div class="address-item aggregated-item">
                                            <div class="amount">
                                                @aggregated.Value.ToString("N0") @input.TitleItem.ShortName
                                            </div>
                                            <div class="address">
                                                <a href="@Url.Action("Index", "Transaction", new {id = aggregated.PreviousTransactionId})">
                                                    <i class="fa fa-lg fa-arrow-left displ-fa"></i>
                                                </a>

                                                @if (aggregated.IsUnrecoginzedAddress)
                                                {
                                                    <span>Unrecognized address</span>
                                                }
                                                else
                                                {
                                                    <a href="@Url.Action("Index", "Address", new {id = aggregated.Address})">@aggregated.Address</a>
                                                }
                                            </div>
                                        </div>
                                        }                                        
                                    </div>
                                }
                            }                            
                        </div>
                    </div>
                    <div class="col-sm-5">
                        <div class="outputs">
                            <div class="outputs-container">
                                <div class="center-chevron">
                                    <img src="/images/arrow.png"/>
                                </div>
                                @foreach (var output in coloredAsset.AggregatedOuts)
                                {
                                    <div class="address-item @(output.ShowAggregatedTransactions ? "js-toggle-aggregated toggle-aggregated" : "")">
                                        <div class="amount">
                                            @output.TitleItem.Value.ToString("N0") @output.TitleItem.ShortName
                                            @if (output.ShowAggregatedTransactions)
                                            {
                                                <span class="pull-right"> (@output.Count) ▼</span>
                                            }
                                        </div>
                                        <div class="address">
                                            @if (output.TitleItem.IsUnrecoginzedAddress)
                                            {
                                                <span>Unrecognized address</span>
                                            }
                                            else
                                            {
                                                <a href="@Url.Action("Index", "Address", new {id = output.TitleItem.Address})">@output.TitleItem.Address</a>
                                            }
                                        </div>
                                    </div>

                                    if (output.ShowAggregatedTransactions)
                                    {
                                        <div class="aggregated-item-container">
                                            @foreach (var aggregated in output.AggregatedTransactions)
                                            {
                                            <div class="address-item aggregated-item">
                                                <div class="amount">
                                                    @aggregated.Value.ToString("N0") @aggregated.ShortName
                                                </div>
                                                <div class="address">

                                                    @if (aggregated.IsUnrecoginzedAddress)
                                                    {
                                                        <span>Unrecognized address</span>
                                                    }
                                                    else
                                                    {
                                                        <a href="@Url.Action("Index", "Address", new {id = aggregated.Address})">@aggregated.Address</a>
                                                    }
                                                </div>
                                            </div>
                                            }                                            
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </li>
    }
</ul>
