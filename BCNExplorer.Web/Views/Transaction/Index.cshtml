@using Common
@model TransactionViewModel
    
@{
    ViewBag.Title = "Transaction - " + Model.TransactionId;
}

<div class="container">
    <header class="top-nav-links clearfix">
        <h1>Transaction</h1>
        <div class="tr-h-top">@Model.TransactionId</div>
    </header>

    <div class="page-content">
        <div class="transaction-explorer">
            <div class="row">
                <div class="col-md-7">
                    <div class="title-bl">Advanced details</div>
                    <table class="table table-rounded ">
                        <tbody>
                            <tr>
                                <td class="no-wrap">Hash</td>
                                <td class="expand-column">@Model.TransactionId</td>
                            </tr>
                            <tr>
                                @if (Model.Block != null)
                                {
                                    <td class="no-wrap">Date</td>
                                    <td class="expand-column">
                                        @($"{Model.Block.Time:F}")
                                    </td>
                                }
                            </tr>
                            <tr>
                                <td class="no-wrap">Fee paid</td>
                                <td class="expand-column">@Model.Bitcoin.Fees BTC</td>
                            </tr>
                            <tr>
                                <td class="no-wrap">Assets transacted</td>
                                <td class="expand-column">
                                    @if (Model.AssetsCount == 0)
                                    {
                                        <span>None</span>
                                    }
                                    else
                                    {
                                        @Model.AssetsCount
                                    }
                                </td>
                            </tr> 
                        </tbody>
                    </table>
                </div>
                <div class="col-md-5">
                    @if (Model.IsConfirmed)
                    {
                        <div class="title-bl">Transaction confirmed</div>
                        <table class="table table-rounded ">
                            <tbody>
                            <tr>
                                <td class="no-wrap">Confirmations</td>
                                <td class="expand-column">@Model.Block.Confirmations confirmations</td>
                            </tr>
                            <tr>
                                <td class="no-wrap">Time</td>
                                <td class="expand-column">@($"{Model.Block.Time:F}")</td>
                            </tr>
                            <tr>
                                <td class="no-wrap">Block</td>
                                <td class="expand-column"><a href="@Url.Action("Index", "Block", new {id = Model.Block.BlockId})">@Model.Block.BlockId</a></td>
                            </tr>
                            <tr>
                                <td class="no-wrap">Height</td>
                                <td class="expand-column">@Model.Block.Height</td>
                            </tr>
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="title-bl">Transaction unconfirmed</div>
                    }
                </div>
            </div>
            <div class="panel panel-default transaction-details tr-de-inner detal-tr-inner @(Model.IsColor ? "colortr" : "")">
                @Html.Partial("TransactionDetails", Model)
            </div>

        </div>

    </div>
    <div class="footer-push"></div>
</div>